{
  "extends": "./tsconfig.json",
  "include": ["lib"],
  "compilerOptions": {
    "outDir": "./types",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true
  }
}
